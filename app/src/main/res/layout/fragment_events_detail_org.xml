<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/eventdet_org">

    <EditText
        android:id="@+id/eventname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:textSize="45dp" />

    <EditText
        android:id="@+id/Eteventtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:text="Event Time"
        android:textColor="@color/pink"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Eteventdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="Event Date"
        android:textColor="@color/pink"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Eteventlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:text="Event Location"
        android:textColor="@color/pink"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/eventdetails_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:text="Event Details"
        android:textColor="@color/pink"
        android:textSize="20sp" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="345dp"
        android:backgroundTint="@color/lightpink"
        android:layout_centerHorizontal="true"
        android:text="Save" />


    <Button
        android:id="@+id/attendeeslistbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_centerHorizontal="true"
        android:text="Event Attendees" />

    <Button
        android:id="@+id/codebtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:text="Event QR Code" />

    <Button
        android:id="@+id/posterbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:text="Event Poster" />
    

    <Button
        android:id="@+id/detailscode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:layout_marginTop="510dp"
        android:text="Promotion QR Code" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-400dp"
        android:text="Back" />


</RelativeLayout>