<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <!-- Image -->
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="visible"/>

    </androidx.cardview.widget.CardView>

    <!-- Editable TextBox - Name -->

    <Button
        android:id="@+id/editPictureButton"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="onUploadImageButtonClick"
        android:text="Edit Picture" />
    <Button
        android:id="@+id/removePictureButton"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="onRemovePictureButtonClick"
        android:text="Remove Picture"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Your Name"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"/>

    <!-- Editable TextBox - Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Your email"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"/>

    <!-- Editable TextBox - Homepage -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Homepage"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/homeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Your Homepage URL"
        android:inputType="textUri"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"/>
    <!-- Editable TextBox - Country -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/countryEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Your Country"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"/>

    <!-- CheckBox -->
    <CheckBox
        android:id="@+id/locationBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geolocation Tracking Permission"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="onSaveButtonClick"
        android:text="Save" />


    <!-- Will add more UI elements as needed -->

</LinearLayout>